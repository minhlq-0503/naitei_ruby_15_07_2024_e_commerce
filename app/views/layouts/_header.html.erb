<header>
  <nav class="navbar navbar-expand-lg header">
    <div class="container-fluid">
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <div class="d-flex justify-content-between align-items-center flex-grow-1">
          <%= link_to root_path do %>
            <%= image_tag "logo.png", class: "logo-image" %>
          <% end %>
          <%= form_with url: root_path, method: :get, local: true, class: "d-flex mx-3 flex-grow-1 justify-content-center" do %>
            <%= text_field_tag :query, nil, class: "form-control me-2 custom-search", placeholder: t(".search.placeholder"), aria: { label: t(".search.placeholder") } %>
            <%= button_tag class: "btn btn-outline-success", type: :submit do %>
              <i class="bi bi-search"></i>
            <% end %>
          <% end %>
          <div class="dropdown">
            <%= link_to "#", id: "language", class: "dropdown-toggle", data: { toggle: "dropdown" } do %>
              <%= t ".language", class: "dropdown" %>
            <% end %>
            <ul id="dropdown-menu" class="dropdown-menu">
              <li><%= link_to t(".english"), locale: :en %></li>
              <li><%= link_to t(".vietnamese"), locale: :vi %></li>
            </ul>
          </div>
          <% if logged_in? %>
            <ul class="navbar-nav d-flex align-items-center">
              <li class="nav-item me-3">
                <%= link_to "#", class: "nav-link cart-icon" do %>
                  <%= image_tag "shopping_cart", class: "shopping_cart" %>
                <% end %>
              </li>
              <li class="nav-item">
                <div class="dropdown">
                  <%= link_to "#", id: "account", class: "dropdown-toggle", data: { toggle: "dropdown" } do %>
                    <%= image_tag "pfp.png", class: "pfp-image" %>
                  <% end %>
                  <ul id="account-dropdown-menu" class="dropdown-menu">
                    <li><%= link_to t(".profile"), "#" %></li>
                    <li><%= link_to t(".order_history"), "#" %></li>
                    <li class="divider"></li>
                    <li><%= link_to t(".log_out"), logout_path, data: {"turbo-method": :delete}%></li>
                  </ul>
                </div>
              </li>
            </ul>
          <% else %>
            <%= link_to login_path, class: "header-text" do %>
              <%= t ".log_in" %>
            <% end %>
            <%= link_to "#", class: "header-text" do %>
              <%= t ".sign_up" %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </nav>
</header>
